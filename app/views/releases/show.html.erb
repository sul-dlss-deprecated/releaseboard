<div class="container">
  <div class="row">
    <%= breadcrumbs @release.project.breadcrumb, @release.breadcrumb %>
    <div class="twelve columns centered">
      <h2><%= @release.project.name %></h2>
      <p>Version <%= @release.version_label(nil) %> released to <span class="white radius label"><%= @release.environment.name %></span> <%= @release.released_at(:link=>false, :words=>:first) %></p>

      <% if @release.release_notes.present? %>
        <h3>Release Notes</h3>
        <div class="panel">
          <%= content_tag :pre, @release.release_notes.to_s, :class => 'notes' %>
        </div>
      <% end %>
    </div>
  </div>
</div>